{#
/**
 * @file
 * Default template for educational_programs_field
 *
 * Available variables:
 *   - title
 *   - smugmug_id
 *   - date
 *     - start_date: Start date for the event
 *     - start_time
 *     - start_day
 *     - end_date
 *     - end_time
 *     - end_day
 *     - next_date
 *     - next_time
 *     - next_day
 *   - online: True/False
 *   - address
 *     - building
 *     - street
 *     - city
 *     - state
 *     - zip
 *   - description
 *   - contact
 *     - name
 *     - email
 *     - phone
 *   - instructor
 *     - name
 *     - email
 *     - phone
 *   - sessions
 *     -
 *       - date
 *       - time
 *       - day
 *       - is_next
 *   - urls
 *     - event
 *     - program
 *   - registration
 *     - url
 *     - opens
 *       - date
 *       - time
 *       - day
 *     - closes
 *       - date
 *       - time
 *       - day
 *     -
 *     -
 */
#}

<div class="program_offering_blocks ungerboeck_eventlist_details">

  {% if smugmug_id %}
    <img class="educational_program_image" src="https://photos.smugmug.com/photos/{{ smugmug_id }}/0/XL/{{ smugmug_id }}-XL.jpg" alt="" />
    <div class="clearer"></div>
  {% endif %}

  <div class="event_details_wrapper">
    <div class="event_details_dates">
      {{ date.start_date }}
      {% if date.start_date != date.end_date %}
        - {{ date.end_date }}
      {% endif %}
    </div>

    <p class="event_details_next_session">
      <em>
        Next Session:
        <span class="event_details_next_dates">
          {{ date.next_day }}, {{ date.next_date }} {{ date.next_time }}
        </span>
      </em>
    </p>

    <div class="event_address_wrapper">
      {% if online %}
        Online
      {% else %}
        {{ address.building }}<br>
        {{ address.street }}<br>
        {{ address.city }},
        {{ address.state }}
        {{ address.zip }}
      {% endif %}
    </div>

    {% if (contact.name) %}
      <div class="event_contact_wrapper">
        <a href="mailto:{{ contact.email }}">{{ contact.name }}</a><br>
        {% if contact.phone %}
          <span>{{ contact.phone }}</span>
        {% endif %}
      </div>
    {% endif %}

    {% if (instructor.name) and (instructor.name != contact.name) %}
      <div class="event_instructor_wrapper">
        <a href="mailto:{{ instructor.email }}">{{ instructor.name }}</a><br>
        {% if instructor.phone %}
          <span>{{ instructor.phone }}</span>
        {% endif %}
      </div>
    {% endif %}

    {% if description %}
      <div class="event_description">
        {{ description }}
      </div>
    {% endif %}

    {# Only in Multi-session template #}
    <div class="event_sessions">
      Sessions:<br/>
      <ol>
        {% for session in sessions %}
          <li>
            {% if session.is_next %}
              <span class="next_session">
            {% endif %}
            {{ session.day }}, {{ session.date }} {{ session.time }}
            {% if session.is_next %}
              </span>
            {% endif %}
          </li>
        {% endfor %}
      </ol>
    </div>

    <div class="event_details_links">
      {% if (urls.event) and (urls.event != registration.url) %}
        <div class="event_details_more_information">
          <a href="{{ urls.event }}" class="btn btn-outline-secondary" aria-label="Learn more about {{ title }}">Event Information</a>
        </div>
      {% endif %}
      {% if (urls.program) and (urls.program != registration.url) and (urls.program != urls.event) %}
        <div class="event_details_more_information">
          <a href="{{ urls.program }}" class="btn btn-outline-secondary" aria-label="Learn more about {{ title }}">Learn more</a>
        </div>
      {% endif %}
      {% if registration.url %}
        <h2 class="isu-block-title h4">Registration</h2>
        <div class="event_details_registration">
          <a href="{{ registration.url }}" aria-label="Register for {{ title }}">Register Online</a>
        </div>
      {% endif %}
      {% if registration.opens.date %}
        <h2 class="isu-block-title h4">Registration</h2>
        <div class="event_details_registration">
          Registration for this event opens on {{ registration.opens.date }}
        </div>
      {% endif %}
      {% if registration.closes.date %}
        <h2 class="isu-block-title h4">Registration</h2>
        <div class="event_details_registration">
          Registration for this event closed on {{ registration.closes.date }}
        </div>
      {% endif %}
    </div>

  </div> {# .event_details_wrapper #}
</div> {# .program_offering_blocks #}
