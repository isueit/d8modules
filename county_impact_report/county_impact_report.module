/**
 * Implements hook_preprocess_HOOK().
 */

function county_impact_report_preprocess_paragraph__county_impact_story(&$variables)
{
  $node = \Drupal::routeMatch()->getParameter('node');
  if (!$node) {
    return;
  }
  $top_data_points = $node->get('field_top_data_points')[0]->entity;
  $data_point_1 = $top_data_points->get('field_data_point_1')->value;
  $data_point_2 = $top_data_points->get('field_data_point_2')->value;
  $data_point_3 = $top_data_points->get('field_data_point_3')->value;


  // Get the impact data
  $impactData = county_impact_report_find_county_impacts();
  $impacts = [];
  if ($data_point_1 != '') {
    $impacts[0]['label'] = $impactData[0][$data_point_1];
    $impacts[0]['icon'] = county_impact_report_find_icon($impactData[0][$data_point_1]);
    $impacts[0]['value'] = county_impact_report_format_value($impactData[1][$data_point_1], $impactData[0][$data_point_1]);
  }
  if ($data_point_2 != '') {
    $impacts[1]['label'] = $impactData[0][$data_point_2];
    $impacts[1]['icon'] = county_impact_report_find_icon($impactData[0][$data_point_2]);
    $impacts[1]['value'] = county_impact_report_format_value($impactData[1][$data_point_2], $impactData[0][$data_point_2]);
  }
  if ($data_point_3 != '') {
    $impacts[2]['label'] = $impactData[0][$data_point_3];
    $impacts[2]['icon'] = county_impact_report_find_icon($impactData[0][$data_point_3]);
    $impacts[2]['value'] = county_impact_report_format_value($impactData[1][$data_point_3], $impactData[0][$data_point_3]);
  }
  $variables['top_impact_data'] = $impacts;

  // Get the first and last id of the paragraphs on the page
  $variables['first_paragraph_id'] = 0;
  $variables['last_paragraph_id'] = 0;
  $node = \Drupal::routeMatch()->getParameter('node');
  if ($node instanceof \Drupal\node\NodeInterface) {
    $paragraphs = $node->get('field_impact_story')->getValue();
    foreach ($paragraphs as $paragraph) {
      if ($variables['first_paragraph_id'] == 0) {
        $variables['first_paragraph_id'] = $paragraph['target_id'];
      }
      $variables['last_paragraph_id'] = $paragraph['target_id'];
    }
  }
}

